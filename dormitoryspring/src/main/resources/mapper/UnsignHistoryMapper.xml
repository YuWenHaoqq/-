<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.wenhao.dormitory.mapper.UnsignHistoryMapper">
    <insert id="insertUnsign" parameterType="priv.wenhao.base.pojo.dto.UnsignHistoryDto">
        insert into school_unsign_history(pk_stu_id,pk_teacher_id,stu_name,is_checked,unsign_history_create,is_deleted)
        values 
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.stuId},#{item.teaId},#{item.stuName},0,now(),0)
        </foreach>
    </insert>

    <select id="selectUnsign" resultType="priv.wenhao.base.pojo.dto.UnsignHistoryDto">
        select ss.stu_id as stuId,ss.pk_teacher_id as teaId,ss.stu_name as stuName,
        0 as checked,now() as createTime,0 as is_deleted
        from school_student ss
        left join school_sign_history ssh on ssh.pk_stu_id!=ss.stu_id
        where ss.is_deleted=0 and datediff(ssh.sign_history_create,now())=0
    </select>
</mapper>